                        <li class="nav-item">
                            <a class="nav-link" style=" color: white;font-size: 1.1rem;" asp-area="" asp-controller="Home" asp-action="BillList">Bill List</a>
                        </li>
                        <div class="vr" style="color: white; width: 4px;"></div>
                    </ul>
                </div>
            </div>
